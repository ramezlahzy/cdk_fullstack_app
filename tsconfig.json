{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020",
      "dom"
    ],
    "declaration": false,
    "removeComments": true, // Remove comments from the output
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": false,
    "inlineSources": false,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@/shared-folders/*": [
        "lambda/src/shared-folders/src/*"
      ]
    },
    "rootDir": "./lambda/src", // source directory
    "outDir": "./lambda/dist"       // output directory
  },
  "include": [
    "./lambda/src/**/*", "lambda/src/assets",        // include source directory
  ],
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
